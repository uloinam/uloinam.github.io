<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    tools:context=".Introduce_Activity">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_02"
        android:layout_width="0dp"
        app:layout_constraintGuide_percent="0.7"
        android:orientation="horizontal"
        android:layout_height="0dp"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"/>
    <androidx.viewpager2.widget.ViewPager2
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/ViewPager2_Introduce"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="match_parent">
    </androidx.viewpager2.widget.ViewPager2>


    <View
        android:id="@+id/index02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toTopOf="@id/gl_02"
        android:background="@drawable/border_button"
        android:backgroundTint="#898989"/>
    <View
        android:id="@+id/index01"
        app:layout_constraintEnd_toStartOf="@+id/index02"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/gl_02"
        android:background="@drawable/border_button"
        android:backgroundTint="#00ACC1"/>
    <View
        android:id="@+id/index03"
        app:layout_constraintStart_toEndOf="@+id/index02"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="45dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/gl_02"
        android:background="@drawable/border_button"
        android:backgroundTint="#898989"/>
    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="50px"
        app:layout_constraintTop_toBottomOf="@id/gl_01"
        android:background="@drawable/border_button"
        android:textColor="@color/white"
        android:textSize="50px"
        android:backgroundTint="#30A9D5"/>
    <TextView
        android:id="@+id/tv_Skip"
        android:layout_width="wrap_content"
        android:text="Skip"
        android:textSize="20dp"
        android:textColor="#30A9D5"

        app:layout_constraintTop_toBottomOf="@+id/btn_next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10px"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>