<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center|top"
    android:background="@color/white"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Mọi thứ trong tầm tay của bạn"
        android:textSize="36dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/phone"
        android:layout_width="165dp"
        android:layout_height="294dp"
        android:layout_marginTop="70px"
        android:background="@drawable/border_phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.213" />

    <ImageView
        android:id="@+id/ellipse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="128dp"
        android:rotation="-20"
        android:src="@drawable/ellipse_2"
        app:layout_constraintStart_toEndOf="@+id/phone"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
    <ImageView
        android:id="@+id/washing_Machine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="135dp"
        android:src="@drawable/group_1"
        app:layout_constraintStart_toEndOf="@+id/phone"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
    <ImageView
        android:id="@+id/ellipse_04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="28dp"
        android:rotation="200"
        android:src="@drawable/ellipse_2"
        app:layout_constraintEnd_toStartOf="@id/phone"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
    <ImageView
        android:id="@+id/ic_viSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="133dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/cabinet_light"
        app:layout_constraintEnd_toStartOf="@id/phone"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
    <ImageView
        android:id="@+id/logo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/phone"
        app:layout_constraintTop_toTopOf="@id/phone"
        android:src="@drawable/logo"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_01"
        android:layout_width="0dp"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="horizontal"
        android:layout_height="0dp"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_02"
        android:layout_width="0dp"
        app:layout_constraintGuide_percent="0.7"
        android:orientation="horizontal"
        android:layout_height="0dp"
        />
    <ImageView
        android:id="@+id/ellipse_01"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/phone"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/ellipse_2"/>
    <ImageView
        android:id="@+id/fridge"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/phone"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/fridge"/>
    <ImageView
        android:id="@+id/ellipse_03"
        android:layout_width="wrap_content"
        android:rotation="180"
        app:layout_constraintEnd_toStartOf="@+id/phone"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        android:src="@drawable/ellipse_2"/>
    <ImageView
        android:id="@+id/dieuHoa"
        android:layout_width="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/phone"
        android:layout_height="wrap_content"
        android:layout_marginEnd="43dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="27dp"
        android:src="@drawable/air_conditioner"/>
    <ImageView
        android:id="@+id/ellipse_02"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/phone"
        android:layout_height="wrap_content"
        android:rotation="20"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toBottomOf="@id/gl_01"
        android:layout_marginStart="30dp"
        android:src="@drawable/ellipse_2"/>
    <ImageView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/phone"
        android:layout_height="wrap_content"
        android:layout_marginTop="83dp"
        app:layout_constraintTop_toBottomOf="@id/gl_01"
        android:layout_marginStart="40dp"
        android:src="@drawable/sdtv"/>
    <ImageView
        android:id="@+id/ellipse_05"
        android:layout_width="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/phone"
        android:layout_height="wrap_content"
        android:rotation="155"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toBottomOf="@id/gl_01"
        android:layout_marginEnd="30dp"
        android:src="@drawable/ellipse_2"/>
    <ImageView
        android:id="@+id/fan"
        android:layout_width="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/phone"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/gl_01"
        android:layout_marginEnd="45dp"
        android:src="@drawable/fan_speed"/>
    <TextView
        android:id="@+id/textView_01"
        android:layout_width="275dp"
        android:text="Khả năng quản lý cửa hàng  sử dụng app dễ dàng, không cần internet đảm bảo giữ liệu không bị mất."
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        android:layout_marginTop="100px"
        app:layout_constraintTop_toBottomOf="@+id/ellipse_02"
        android:gravity="center"/>
    <View
        android:id="@+id/index"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_01"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
